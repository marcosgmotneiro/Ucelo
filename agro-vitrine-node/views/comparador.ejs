<%- include('partials/header', { user: user }) %>

<section class="py-10">
  
  <!-- Título -->
  <div class="text-center mb-10">
    <h2 class="text-3xl font-bold text-gray-900">Comparador de Canecas</h2>
    <p class="text-gray-600 mt-2">Selecione duas canecas para visualizar diferenças técnicas e de desempenho</p>
  </div>

  <!-- Formulário -->
  <div class="max-w-4xl mx-auto bg-white p-6 rounded-xl shadow-lg border border-gray-100 mb-12">

    <form method="POST" action="/comparar" class="grid md:grid-cols-2 gap-6">
      
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Caneca 1</label>
        <select name="caneca1" class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-indigo-500 focus:border-indigo-500">
          <% canecas.forEach(c => { %>
            <option value="<%= c.Modelo %>"><%= c.Modelo %></option>
          <% }) %>
        </select>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Caneca 2</label>
        <select name="caneca2" class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-indigo-500 focus:border-indigo-500">
          <% canecas.forEach(c => { %>
            <option value="<%= c.Modelo %>"><%= c.Modelo %></option>
          <% }) %>
        </select>
      </div>

      <div class="md:col-span-2 flex justify-center mt-4">
        <button class="px-8 py-3 bg-indigo-600 text-white font-semibold rounded-lg shadow hover:bg-indigo-700 transition">
          Comparar
        </button>
      </div>

    </form>
  </div>

  <!-- Resultado -->
  <% if (resultado) { %>
    
    <% if (resultado.erro) { %>

      <p class="text-red-600 text-center text-lg font-medium"><%= resultado.erro %></p>

    <% } else { %>

      <div class="max-w-5xl mx-auto bg-gray-50 p-8 rounded-xl shadow">

        <h3 class="text-2xl font-semibold mb-8 text-center text-gray-800">Resultado da Comparação</h3>

        <!-- Cards das canecas -->
        <div class="grid md:grid-cols-2 gap-6">

          <!-- Caneca 1 -->
          <div class="bg-white rounded-xl shadow p-6 border border-gray-100">
            <h4 class="text-xl font-bold text-gray-800 mb-4"><%= resultado.modelo1 %></h4>

            <ul class="space-y-2 text-gray-700">
              <li><b>Material:</b> <%= resultado.material1 %></li>
              <li><b>Furação:</b> <%= resultado.furacao1 %></li>
              <li><b>Volume:</b> <%= resultado.volumeDiff >= 0 ? resultado.volumeDiff : -resultado.volumeDiff %> mL</li>
            </ul>
          </div>

          <!-- Caneca 2 -->
          <div class="bg-white rounded-xl shadow p-6 border border-gray-100">
            <h4 class="text-xl font-bold text-gray-800 mb-4"><%= resultado.modelo2 %></h4>

            <ul class="space-y-2 text-gray-700">
              <li><b>Material:</b> <%= resultado.material2 %></li>
              <li><b>Furação:</b> <%= resultado.furacao2 %></li>
              <li><b>Diferença de Volume:</b> <%= resultado.volumeDiff %></li>
            </ul>
          </div>

        </div>

        <!-- Diferenças técnicas -->
        <div class="text-center mt-10 space-y-2 text-gray-700">
          <p><b>Diferença de Resistência à Tração:</b> <%= resultado.resistenciaDiff %></p>
          <p><b>Diferença de Deslocamento:</b> <%= resultado.deslocamentoDiff %></p>
        </div>

      </div>

    <% } %>

  <% } %>

</section>

<%- include('partials/footer') %>
