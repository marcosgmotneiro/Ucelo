<%- include('partials/header', { user: user }) %>

<div class="max-w-xl mx-auto bg-white p-6 rounded-xl shadow">
  <h2 class="text-2xl font-semibold mb-6">Criar Conta</h2>

  <form method="post" action="/register" class="space-y-4">

    <div>
      <label class="block text-sm mb-1">Nome Completo</label>
      <input name="name" required class="w-full border rounded px-3 py-2" />
    </div>

    <div>
      <label class="block text-sm mb-1">Email</label>
      <input name="email" type="email" required class="w-full border rounded px-3 py-2" />
    </div>

    <div>
      <label class="block text-sm mb-1">Senha</label>
      <input name="password" type="password" required class="w-full border rounded px-3 py-2" />
    </div>

    <div>
      <label class="block text-sm mb-1">Tipo de Conta</label>
      <select name="role" class="w-full border rounded px-3 py-2">
        <option value="Cliente">Cliente</option>
        <option value="Funcionario">Funcionário</option>
      </select>
    </div>

    <div>
      <label class="block text-sm mb-1">Telefone</label>
      <input name="telefone" placeholder="(XX) XXXXX-XXXX" class="w-full border rounded px-3 py-2" />
    </div>

    <div>
      <label class="block text-sm mb-1">CPF</label>
      <input name="cpf" placeholder="000.000.000-00" class="w-full border rounded px-3 py-2" />
    </div>

    <div>
      <label class="block text-sm mb-1">CNPJ</label>
      <input name="cnpj" placeholder="00.000.000/0000-00" class="w-full border rounded px-3 py-2" />
    </div>

    <div>
      <label class="block text-sm mb-1">Razão Social</label>
      <input name="razao" placeholder="Apenas se for empresa" class="w-full border rounded px-3 py-2" />
    </div>

    <button class="w-full py-3 rounded bg-green-600 text-white font-semibold">
      Cadastrar
    </button>

    <% if (typeof error !== 'undefined' && error) { %>
      <p class="text-red-600 text-sm mt-2"><%= error %></p>
    <% } %>

  </form>
</div>

<%- include('partials/footer') %>
